<%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
	<%= f.label "Email" %>
  <%= f.text_field :email %>
  <%= f.label "Password"  %>
  <%= f.password_field :password %>
  <%= f.label "Password confirm"%>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Login" %>
<% end %>