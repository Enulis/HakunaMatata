<%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
	
  <%= f.text_field :email, class: "tfield" %>
  <%= f.label "Password" %>
  <%= f.password_field :password, class: "tfield" %>
  <%= f.label "Password confirm"%>
  <%= f.password_field :password_confirmation, class: "tfield" %>
  <%= f.submit "Login" %>
<% end %>